@{
}
@model UsersApp.Models.ListAttendanceViewModel


<h2>@Model.name 's attendances</h2>
<table class="table">
    <thead>
        <tr>
            
            <th>Date</th>
            <th>TimeIn</th>
            <th>TimeOut</th>
            <th>Absence</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var attendance in Model.attendance)
        {
            <tr>
                
                <td>@attendance.date</td>
                <td>@attendance.timeStart</td>
                <td>@attendance.timeEnd</td>
                <td>@attendance.Absence</td>
                <td>
                    <form method="post" asp-action="Delete"
                          asp-controller="Attendances" asp-route-id="@attendance.Id">
                    <button type="submit" class="btn btn-danger ms-3">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
        
        
    </tbody>
</table>

