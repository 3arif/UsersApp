@model UsersApp.Models.AddAttendanceViewModel

<h1>Add Record</h1>

    <form method="post">
        <div class="mt-3">
            <label class="form-label">ID</label>
            <input type="text" class="form-control" asp-for="ClientId" readonly />
        </div>
    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="name" readonly />
    </div>
        <div class="mt-3">
            <label class="form-label">Date</label>
            <input type="date" class="form-control" asp-for="date" />
        </div>
        <div class="mt-3">
            <label class="form-label">Time Start</label>
            <input type="time" class="form-control" asp-for="timeStart" />
        </div>
    <div class="mt-3">
        <label class="form-label">Time End</label>
        <input type="time" class="form-control" asp-for="timeEnd" />
    </div>
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            var absenceDropdown = document.querySelector("[name='Absence']");
            var timeStartInput = document.querySelector("[name='timeStart']");
            var timeEndInput = document.querySelector("[name='timeEnd']");

            absenceDropdown.addEventListener("change", function() {
                if (this.value !== "Present") {
                    timeStartInput.value = "00:00";
                    timeEndInput.value = "00:00";
                    timeStartInput.disabled = true;
                    timeEndInput.disabled = true;
                } else {
                    timeStartInput.disabled = false;
                    timeEndInput.disabled = false;
                }
            });
        });
    </script>
    <div class="mt-3">
        <label class="form-label">Absence Type</label>
        <select class="form-select" asp-for="Absence">
            <option value="Present" selected>Present</option>
            <option value="Announced">Announced</option>
            <option value="Unannounced">Unannounced</option>
            <option value="Vacation">Vacation</option>
            <option value="Sickness">Sickness</option>
            <option value="DayOff">Day Off</option>
        </select>
    </div>

        <div class="mt-3">

            <button type="submit" class="btn btn-success">Save</button>
        </div>
    </form>

