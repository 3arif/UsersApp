@{
}
@model AttendanceReportViewModel

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2 class="mb-4">Attendance Report for @Model.ClientName</h2>

            <ul class="list-group mb-4">
                <li class="list-group-item">
                    <strong>Number of workdays:</strong> @Model.Workdays
                </li>
                <li class="list-group-item">
                    <strong>Total work hours:</strong> @Model.TotalHours
                </li>
            </ul>

            @if (Model.QualifiesForSalary)
            {
                <div class="alert alert-success" role="alert">
                    The worker qualifies for salary payout.
                </div>
            }
            else
            {
                <div class="alert alert-danger" role="alert">
                    The worker does not qualify for salary payout.
                </div>
            }

            <a class="btn btn-danger w-100 mt-3" asp-action="AttendanceReport" asp-route-clientId="@Model.ClientId">
                Back
            </a>
        </div>
    </div>
</div>
