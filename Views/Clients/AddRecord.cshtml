@model UsersApp.Models.AddAttendanceViewModel

<h1>Add Record</h1>
@if (Model is null)
{
    <p>No client was found with this ID</p>
}
else
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">ID</label>
            <input type="text" class="form-control" asp-for="ClientId" readonly />
        </div>


        <div class="mt-3">
            <label class="form-label">Datet</label>
            <input type="date" class="form-control" asp-for="date" />
        </div>
        <div class="mt-3">
            <label class="form-label">Time</label>
            <input type="time" class="form-control" asp-for="timeStart" />
        </div>

        <div class="mt-3">
            <label class="form-label">Absence Type</label>
            <select class="form-select" asp-for="Absence">
                <option value="Announced">Announced</option>
                <option value="Unannounced">Unannounced</option>
                <option value="Vacation">Vacation</option>
                <option value="Sickness">Sickness</option>
                <option value="DayOff">Day Off</option>
            </select>
        </div>

        <div class="mt-3">

            <button type="submit" class="btn btn-success">Save</button>
        </div>
    </form>
}
